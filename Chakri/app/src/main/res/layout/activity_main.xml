<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.chakri.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:paddingTop="@dimen/paddingToSet"
        android:layout_height="@dimen/heightMainScreen"
        android:layout_weight="1"
        android:paddingLeft="@dimen/paddingForMainScreen"
        android:textSize="@dimen/textSize"
        android:text="Sabih "
        android:textColor="@color/buttonTextColor"
        android:background="@color/sabih"
        android:id="@+id/sabih"
        />

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/buttonTextColor"
        android:paddingTop="@dimen/paddingToSet"
        android:layout_height="@dimen/heightMainScreen"
        android:paddingLeft="@dimen/paddingForMainScreen"
        android:layout_weight="1"
        android:background="@color/umair"
        android:textSize="@dimen/textSize"
        android:text="Umair"
        android:id="@+id/umair"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightMainScreen"
        android:layout_weight="1"
        android:textColor="@color/buttonTextColor"
        android:background="@color/anus"
        android:textSize="@dimen/textSize"
        android:text="Anus"
        android:paddingTop="@dimen/paddingToSet"
        android:paddingLeft="@dimen/paddingForMainScreen"
        android:id="@+id/anus"
        />

    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/paddingForMainScreen"
        android:layout_height="@dimen/heightMainScreen"
        android:layout_weight="1"
        android:paddingTop="@dimen/paddingToSet"
        android:background="@color/talha"
        android:textSize="@dimen/textSize"
        android:textColor="@color/buttonTextColor"
        android:text="Talha"
        android:id="@+id/talha"
        />

</LinearLayout>
